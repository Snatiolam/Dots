[WEATHER_SIGNALER]
command=~/.config/i3blocks/weather/weather_signaler
interval=once

[WEATHER]
command=~/.config/i3blocks/weather/weather_info.sh
interval=300
color=#FEC925
signal=2

[DISK]
command=~/.config/i3blocks/scripts/disk /home
interval=2
color=#C9E3DB

[BATTERY]
command=~/.config/i3blocks/scripts/battery
interval=3

[CPU]
full_text= CPU:  0.00% @ +00.0°C 
command=~/.config/i3blocks/scripts/cpu
interval=repeat
color=#00B4EB

[MEM]
command=free -h | awk '/Mem:/ { printf(" 🐏 %5s/%s \n", $3, $2) }'
interval=1
color=#FEC925

[SOUND_BURST]
command=~/.config/i3blocks/sound/sound_burst.sh
interval=once

[SOUND]
full_text= 🔇:  0% 
command=~/.config/i3blocks/scripts/sound_info.sh
interval=0
signal=1

[wifi]
command=~/.config/i3blocks/wifi/wifi_quality
label=📶
instance=wlp2s0
interval=30

[TIME_DATE]
label=🗓️
command=date +" %a, %d %b - %H:%M:%S"
interval=1


